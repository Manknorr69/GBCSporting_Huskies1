@model Customer
@{
    string title = ViewBag.Action + " Movie";
    ViewBag.Title = title;
}

<h2>@title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Firstname">First Name</label>
        <input asp-for="Firstname" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Lastname">Last Name</label>
        <input asp-for="Lastname" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Countries</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="">select a genre</option> 
            @foreach (Catergory g in ViewBag.Category)
            {
                <option value="@g.CategoryId">@g.Name</option>
            }
        </select>
    </div>

    <input type="hidden" asp-for="CustomerId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>